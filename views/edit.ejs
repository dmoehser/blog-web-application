<%- include('partials/header', {title: 'Edit post - My Blog'}) %>
        <h1>Edit blog post</h1>
        <form action="/edit/<%= post.id %>" method="POST" class="post-form">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="<%= post.title %>" required>
            </div>
            <div class="form-group">
                <label for="content">Contents:</label>
                <textarea id="content" name="content" rows="10" required><%= post.content %></textarea>
            </div>
            <button type="submit">Save changes</button>
        </form>
        <a href="/" class="back-link">‚Üê Back to the homepage</a>

<%- include('partials/footer') %>